<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pacheco.segundoparcialmp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_mp"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SegundoParcialMP">

        <activity android:name=".Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="Login"></activity>
        <activity
            android:name=".Formulario"
            android:label="Formulario"
            android:parentActivityName=".MainActivity"></activity>
        <activity android:name=".Contenido"
            android:label="Contenido"
            android:parentActivityName=".Formulario"></activity>
    </application>

</manifest>